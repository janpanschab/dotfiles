[alias]
	c = commit -am
	pre = pull --rebase
	p = push
	s = status -s -b
	df = diff --color --color-words --abbrev
	ds = diff --stat
	dc = diff --cached
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	us = submodule foreach git pull origin master
[color]
	ui = always
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
[push]
	default = current
[user]
	name = Jan Panschab
	email = jan.panschab@gmail.com
